<style>
    .aboutTextCol {
        border-radius: 5px;
        border-left: 1px solid #ccff00;
    }
    .imgRounded {
        height: 500px;
        width: 500px;
        border-radius: 50%;
        object-fit: cover;
    }
    @@media (max-width: 1200px) {
        .imgRounded {
            height: 450px;
            width: 450px;
        }
    }
    @@media (max-width: 992px) {
        .imgRounded {
            height: 350px;
            width: 350px;
        }
    }
    @@media (max-width: 576px) {
        .imgRounded {
            height: 300px;
            width: 300px;
        }
    }

    @@keyframes fadeGrow {
        0% {
            transform: scale(0.9);
            opacity: 0;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    .fadeGrow {
        animation: fadeGrow 1.5s;
    }

    @@keyframes fadeShrink {
        0% {
            transform: scale(1.1);
            opacity: 0;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    .fadeShrink {
        animation: fadeShrink 1.5s;
    }

    .skillsGrid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(3, 1fr);
    }
    .skillsGrid > div {
        align-self: center;
        padding: 5%;
    }

</style>
